        <img class="bg-dreambuilderaqua" src="~/images/126460773.jpg">
    </div>
}
else
{
    if (this.User.IsInRole("Admin"))
    {
        <div class="text-center">
            <h1 class="mt-3">We build your dreams, Admin!</h1>
            <img class="bg-dreambuilderaqua" src="~/images/126460773.jpg">
        </div>
    }
    else
    {
        <div class="text-center">
            <h1 class="mt-3">We build your dreams, User!</h1>
            <img class="bg-dreambuilderaqua" src="~/images/126460773.jpg">
        </div>
    }
}
