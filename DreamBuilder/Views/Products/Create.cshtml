@model DreamBuilder.Models.Products.InputModels.ProductCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<h5 class="mt-3 shadow bg-dreambuilderKhaki w-25 d-flex justify-content-center rounded">Create new product</h5>
<hr class="bg-success"/>
<div class="row">
    <div class="col-md-4">       @*// TODO: Check if it finds the controller & method by itself?*@
        @*<form asp-controller="Products" asp-action="Create" method="post">*@
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" type="text" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" type="text" placeholder="Make" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" type="text" placeholder="Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" placeholder="Upload image" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" value="0.00" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="ManufacturedOn" class="control-label"></label>
                    <input asp-for="ManufacturedOn" class="form-control" type="date" placeholder="ManufacturedOn" />
                    <span asp-validation-for="ManufacturedOn" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" type="text" placeholder="Category" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-lg-around">
                    <input type="submit" value="Create" class="btn bg-dreambuilder" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to top</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
