@model List<DreamBuilder.Models.Products.ViewModels.ProductsAllViewModel>

@{
    ViewData["Title"] = "All";
}
<h1>All Products</h1>
<div class="grid container-fluid justify-content-around">

    @foreach (var product in Model)
    {
        <div class="row">
            <div class="grid-md-3">
                <a href="/Products/Details/@product.Id" class="view-product">
                    <img src="@product.Image" />
                </a>
                <h5 class="text-left">Name: @product.Name</h5>
                <h5 class="text-left">Category: @product.Category.Name</h5>
                <h5 class="text-left">Make: @product.Make</h5>
                <h5 class="product-price">Price: &#163;@product.Price.ToString("F2")</h5>
            </div>
        </div>
    }
</div>
<div class="text-right">
    <a asp-action="Index" class="btn bg-dreambuilder font-weight-bold rounded">Back to top</a>
</div>

