@model List<DreamBuilder.Models.Products.ViewModels.ProductsAllViewModel>

@{
    ViewData["Title"] = "All";
}
<h3 class="mt-3">All Products</h3>
<div class="grid container-fluid justify-content-around">

    @foreach (var product in Model)
    {
        <div class="row">
            <div class="grid-md-3">
                <a href="/Products/Details/@product.Id" class="view-product">
                    <img src="@product.Image" />
                </a>
                <h5 class="text-left">Name: <span class="text-success ">@product.Name</span></h5>
                <h5 class="text-left">Category: <span class="text-success ">@product.Category.Name</span></h5>
                <h5 class="text-left">Make: <span class="text-success">@product.Make</span></h5>
                <h5 class="product-price">Price: <span class="text-success">&#163;@product.Price.ToString("F2")</span></h5>
            </div>
        </div>
    }
</div>
<div class="text-right">
    <a asp-action="Index" class="btn bg-dreambuilder font-weight-bold rounded">Back to top</a>
</div>

