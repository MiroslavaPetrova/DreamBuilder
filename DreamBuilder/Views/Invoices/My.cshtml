@model IEnumerable<DreamBuilder.Models.Invoices.ViewModels.InvoicesMyViewModel>

@{
    ViewData["Title"] = "My";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 text-center">My Invoices</h1>
<table class="table table-hover">
    <thead>
        <tr class="row text-center text-success font-weight-bold">
            <th class="col-md-4 h3">Invoice &#8470;</th>
            <th class="col-md-4 h3">Issued On</th>
            <th class="col-md-4 h3">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr class="row  text-center font-weight-bold">
                <td class="col-md-4 h5">@invoice.Id</td>
                <td class="col-md-4 h5">@invoice.IssuedOn.ToString("dd/MM/yyyy")</td>
                <td class="col-md-4 h5">$@(invoice.Price.ToString("F2"))</td>
            </tr>
        }
    </tbody>
</table>
