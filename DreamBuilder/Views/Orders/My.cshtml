@model List<DreamBuilder.Models.Orders.ViewModels.OrdersMyViewModel>

@{
    ViewData["Title"] = "My";
}

<h2 class="mt-5 mx-5 d-flex justify-content-center  shadow bg-dreambuilderKhaki w-25 d-flex justify-content-center rounded">My Orders</h2>

@if (Model.Count() == 0)
{
    <h4>Currently you have no pending orders!</h4>
}
else
{
    @foreach (var order in Model)
    {
        <div class="d-flex justify-content-around row mt-5">
            <div id="product-image-and-navigation-holder">
                <div id="image-holder">
                    <img src="@order.ProductImage"/>
                </div>
            </div>
            <div id="order-data-holder" class="mt-5">
                <h3 class="text-center shadow"> Name: <span class="text-success ">@order.ProductName</span></h3>
                <h3 class="text-center shadow">Creation date: <span class="text-success "> @order.CreationDate.ToString("dd/MM/yyyy")</span></h3>
                <h3 class="text-center shadow">Price: <span class="text-success ">&#163;@order.ProductPrice.ToString("F2")</span></h3>
            </div>
        </div>
    }
    <form asp-controller="Orders" asp-action="Complete" method="post">
        @*<input type="hidden" value="@Model.Id" name="productId" />*@
        <div id="navigation-holder" class="mt-4 d-flex justify-content-center">
            <button class="btn bg-dreambuilder text-dark font-weight-bold mb-5">Complete order</button>
        </div>
    </form>
}

